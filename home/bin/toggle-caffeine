#!/usr/bin/env bash

# if the script is passed --toggle
if [[ "$1" == *toggle* ]]; then
    if pgrep caffeine >/dev/null; then
        killall caffeine
    else
        caffeine &>/dev/null &
    fi
    exit 0
fi

while true; do
    # caffeine is running
    if pgrep caffeine >/dev/null; then
        echo "%{F#0000FF}"
    else
        echo "%{F#FF0000}"
    fi
    sleep 2
done
