#!/usr/bin/env bash

if [ -e "$HOME/.config/.composite_enabled" ] && [ "$(pidof compton)" ]; then
    al-compositor --restart
elif [ -e "$HOME/.config/.composite_enabled" ]; then
    al-compositor --start
else
    echo "#Compositing enabled" > $HOME/.config/.composite_enabled
    if [ "$(pidof compton)" ]; then
        al-compositor --start
    else
        al-compositor --restart
    fi 
fi
