#!/usr/bin/env bash

wireless_connected=""
disconnected="/"
ethernet_connected=""

while true; do
    if ping -c1 8.8.8.8 &>/dev/null; then
        if [[ $(ip link | awk '/state UP/ {getline;print $1}') = link/ether ]]; then
          echo "$ethernet_connected"; sleep 10
        else
          echo "$wireless_connected"; sleep 10
        fi
    else
        echo "$disconnected"; sleep 1
    fi
done
